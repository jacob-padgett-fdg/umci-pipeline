#
# Table structure for table 'cdinfo'
#
drop table if exists cdinfo;

CREATE TABLE cdinfo (
  cdinfo_id int(11) NOT NULL auto_increment,
  dbnames_id int(11) DEFAULT '0' NOT NULL,
  serial_num char(40),
  create_date date,
  description char(100),
  department int(11),
  creator char(50),
  customer int(11),
  project char(50),
  date_begin date,
  date_end date,
  copies int(11),
  PRIMARY KEY (cdinfo_id),
  UNIQUE serial_num (serial_num)
);



			opener.document.issue_edit.issue_approved.value='Y';
			opener.document.issue_edit.submit();
			self.close();
			
			}

		}	
	</script>";	
	
	
	}


echo "
<html><body bgcolor=#ffffff>

<a href=javascript:self.close();><font color=blue>Close</font></a>
<p>

drop table if exists spool_fab_tracking;
create table spool_fab_tracking (
	spool_fab_tracking_id int not null auto_increment,
	jobinfo_id int not null,
	system_id int not null,
	cad_file_name char(254),
	spool_tag_size char (25),
	spool_tag_line_num char(50),
	spool_tag_piece char(50),
	spool_rev_num char(20),
	shop_drawing_ref char (254),
	drawn_date date,
	field_review char (254),
	priority int,
	estimated_hours decimal (5,2),
	actual_hours decimal (5,2),
	released_to_fab date,
	fab_shop_name char (254),
	date_needed date,
	status char(254),
	material_req_num char (254),
	material_ordered date,
	material_required date,
	material_received date,
	po_number char (254),
	location char (254),
	weld_procedure char (254),
	field_approval char (254),
	pm_approval char (254),
	completed char(5) default 'no',
	primary key (spool_fab_tracking_id),
	key (jobinfo_id),
	unique (jobinfo_id,system_id,spool_tag_size,spool_tag_line_num,spool_tag_piece)
	);
	

